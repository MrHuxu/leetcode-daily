<html>


<head>
  <meta name="viewport" content="width=device-width,minimum-scale=1,maximum-scale=1">

  <link href="https://cdn.bootcdn.net/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.bootcdn.net/ajax/libs/font-awesome/5.15.3/css/fontawesome.min.css" rel="stylesheet">

  <style>
    html,
    body {
      background-color: beige;
    }

    body {
      padding: 30px 0;
    }

    * {
      font-family: monospace, monospace;
    }

    #sider {
      text-align: center;
    }

    #content {
      padding: 0 10px;
    }


    #git {
      position: fixed;
      display: none;
      bottom: 50px;
      left: calc(10% - 46px);
      z-index: 999;
    }


    @media only screen and (min-width: 1050px) {
      #sider {
        position: fixed;
        left: 0;
        top: 0;
        width: 20%;
        height: 100%;
        padding: 50px 0 0 0;
        border-right: 2px solid #DDDDDD;
      }

      #content {
        padding: 0 30px;
        width: calc(80% - 60px);
        margin-left: 20%;
      }

      #divider-before-content {
        display: none;
      }

      #git {
        display: block;
      }
    }

    #breadcrumb-home {
      text-decoration: none;
      color: #333333;
    }

    .divider {
      border-top: 2px solid #DDDDDD;
    }
  </style>

</head>

<body>

  <a id="git" href="https://github.com/MrHuxu/leetcode-daily/actions/workflows/go.yml" target="_blank">
    <img src="https://github.com/MrHuxu/leetcode-daily/actions/workflows/go.yml/badge.svg" />
  </a>

  {{ if eq .page "index" }}
  {{ template "index" .years }}
  {{ else if eq .page "year" }}
  {{ template "year" .year }}
  {{ else if eq .page "month" }}
  {{ template "month" .month }}
  {{ else if eq .page "day" }}
  {{ template "day" .day }}
  {{ else }}
  {{ template "error" .err }}
  {{ end }}

</body>

</html>